@model ProductListModel
@{ ViewData["Title"] = "Index"; }

<h1>Admin Products</h1>
<hr />

@if (Model.Products.Count() > 0) //products varsa tabloyu yaz
{

<table class="table table-bordered">
    <thead>
        <tr>
            <th style="width:30px;">Id</th>
            <th style="width:100px;">Image</th>
            <th>Name</th>
            <th style="width:12px;">Price</th>
            <th style="width:150px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
<tr>
    <td>@item.Id</td>
    <td>
        <img src="~/img/@item.ImageUrl" width="80" />
    </td>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>
        <a class="btn btn-primary btn-sm mr-2" href="/admin/products/@item.Id">Edit</a>
        <form action="/admin/deleteproduct" method="post" style="display:inline;">
            <input type="hidden" name="productId" value="@item.Id" />
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </td>
</tr>}

    </tbody>

</table> }
            else
            {
<div class="alert alert-warning">
    <h4>No Products</h4>
</div>}


